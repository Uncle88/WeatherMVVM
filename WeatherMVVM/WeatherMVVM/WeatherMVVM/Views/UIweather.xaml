<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherMVVM.Views.UIweather" >
  <StackLayout Orientation="Vertical" BackgroundColor="#FADBCA"  >
    <Grid>
    <Label  Text="WeatherToDay" TextColor="#B600FA"  FontSize="35" FontAttributes="Bold" HorizontalTextAlignment="Center" 
           VerticalTextAlignment="Start" WidthRequest="100" HeightRequest="50" />
    <Entry HorizontalOptions="CenterAndExpand" Margin="5,60,5,15"
           VerticalOptions="StartAndExpand"
           TextColor="#FA0800"
           Placeholder="Enter the City" BackgroundColor="#00FAEB"
           FontSize="30" Opacity="0.5" Keyboard="Text"/>
    <Button Text="SEARCH" TextColor="#002DFA" FontSize="30" Margin="5,140,5,15" HorizontalOptions="CenterAndExpand"
          VerticalOptions="StartAndExpand" BackgroundColor="#FA0066" BorderRadius="5"/>
  </Grid>
  </StackLayout>


</ContentPage>